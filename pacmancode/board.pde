  //draws board to screen
  void drawBoard() {
    for(int i=0; i<16; i++) {
      for(int j=0; j<16; j++) {
        switch(walls[i][j]){
          case 1:
            fill(255);
            circle(j*50+25, i*50+25, 20);
            break;
          case 2:
            fill(50, 0, 250);
            square(j*50, i*50, 50);
        }
      }
    }
  }
  
  //updates a spot on the grid
  void updateBoard(int x, int y, int num){
    walls[x][y] = num;
  }
  
  
}
